<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" android:enterFadeDuration="@android:integer/config_shortAnimTime" android:exitFadeDuration="@android:integer/config_shortAnimTime">
    <item android:state_activated="true">
        <shape android:shape="rectangle">
            <stroke android:width="@dimen/classic_divider_height_secondary" android:color="@color/classicDivider" />
            <solid android:color="@color/classicItemBgColoredSelected" />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <stroke android:width="@dimen/classic_divider_height_secondary" android:color="@color/classicDivider" />
            <solid android:color="@color/classicItemBgColoredSelected" />
        </shape>
    </item>
    <item android:state_checked="true">
        <shape android:shape="rectangle">
            <stroke android:width="@dimen/classic_divider_height_secondary" android:color="@color/classicDivider" />
            <solid android:color="@color/classicItemBgColoredSelected" />
        </shape>
    </item>
    <item android:state_selected="true">
        <shape android:shape="rectangle">
            <stroke android:width="@dimen/classic_divider_height_secondary" android:color="@color/classicDivider" />
            <solid android:color="@color/classicItemBgColoredSelected" />
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <stroke android:width="@dimen/classic_divider_height_secondary" android:color="@color/classicDivider" />
            <solid android:color="@color/classicItemBgColoredSelected" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/classicItemBgColored" />
            <stroke android:width="@dimen/classic_divider_height_secondary" android:color="@color/classicDivider" />
        </shape>
    </item>
</selector>