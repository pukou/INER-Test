<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/ClassicLinearV.MatchWrap"
    android:layout_margin="@dimen/classic_item_comm_margin_tertiary"
    android:gravity="center_vertical">


    <LinearLayout style="@style/ClassicLinearH.MatchWrap">

        <!-- 业务需求 可点击 注意 list 推荐用itemclick 操作check 状态 -->

        <CheckBox
            android:id="@+id/id_cb"
            style="@style/ClassicCheck.AutoWrap"
            android:padding="@dimen/classic_item_comm_margin_tertiary"
            tools:text="dasdasda" />

        <TextView
            style="@style/ClassicTextTertiaryColored"
            android:padding="@dimen/classic_item_comm_margin_tertiary"
            android:text="主要症状：" />

        <TextView
            android:id="@+id/id_tv"
            style="@style/ClassicTextSecondary"
            android:padding="@dimen/classic_item_comm_margin_tertiary"
            tools:text="意识障碍" />


    </LinearLayout>

    <LinearLayout style="@style/ClassicLinearH.MatchWrap">

        <TextView
            style="@style/ClassicTextTertiaryColored"
            android:padding="@dimen/classic_item_comm_margin_quaternary"
            android:text="医嘱计划：" />

        <TextView
            android:id="@+id/id_tv_2"
            style="@style/ClassicTextSecondary.AutoWrap"
            android:padding="@dimen/classic_item_comm_margin_quaternary"
            tools:text="懂啊大所多的阿斯达" />


    </LinearLayout>

    <LinearLayout style="@style/ClassicLinearH.MatchWrap">

        <TextView
            style="@style/ClassicTextTertiaryColored"
            android:padding="@dimen/classic_item_comm_margin_quaternary"
            android:text="频次：" />

        <TextView
            android:id="@+id/id_tv_3"
            style="@style/ClassicTextSecondary"
            android:padding="@dimen/classic_item_comm_margin_quaternary"
            tools:text="bid" />


        <TextView
            style="@style/ClassicTextTertiaryColored"
            android:padding="@dimen/classic_item_comm_margin_quaternary"
            android:text="计划时间：" />

        <TextView
            android:id="@+id/id_tv_4"
            style="@style/ClassicTextSecondary.AutoWrap"
            android:padding="@dimen/classic_item_comm_margin_quaternary"
            tools:text="2018-1-9 16:19:05" />


    </LinearLayout>

    <LinearLayout style="@style/ClassicLinearH.MatchWrap">

        <TextView
            style="@style/ClassicTextTertiaryColored"
            android:padding="@dimen/classic_item_comm_margin_quaternary"
            android:text="备注：" />

        <TextView
            android:id="@+id/id_tv_5"
            style="@style/ClassicTextSecondary.AutoWrap"
            tools:text="大苏打实打实上的"
            android:maxLines="1" />
    </LinearLayout>

</LinearLayout>