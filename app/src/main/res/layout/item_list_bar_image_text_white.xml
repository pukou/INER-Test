<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="@dimen/classic_item_comm_padding_secondary"
    style="@style/ClassicLinearH.MatchWrap">

    <ImageView
        android:id="@+id/menuIcon"
        style="@style/ClassicImage"
        android:src="@drawable/ic_chevron_right_black_24dp"
        tools:src="@drawable/ic_info_black_24dp" />

    <TextView
        android:id="@+id/menuText"
        style="@style/ClassicTextPrimaryWhite"
        tools:textColor="@color/aqua"
        tools:text="menuText" />

</LinearLayout>