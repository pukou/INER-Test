<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/classicViewBg"
    android:orientation="vertical"
    android:paddingRight="20dp">
    <!--！！！未改-->
    <View
        android:id="@+id/view_1"
        android:layout_width="1dp"
        android:layout_height="25dp"
        android:layout_marginLeft="32dp"
        android:background="#A6A6A6" />

    <View
        android:id="@+id/view_2"
        android:layout_width="1dp"
        android:layout_height="60dp"
        android:layout_alignLeft="@+id/show_time"
        android:layout_below="@+id/show_time"
        android:layout_marginLeft="32dp"
        android:background="#A6A6A6" />

    <TextView
        android:id="@+id/show_time"
        style="@style/ClassicTextSecondaryWhite"
        android:layout_below="@+id/view_1"
        android:background="@drawable/shape_classic_bg_view_o"
        android:text="2018-1-17" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/show_time"
        android:layout_toRightOf="@+id/show_time">


        <RelativeLayout
            android:id="@+id/relative"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/timeline_content"
            android:padding="@dimen/classic_item_comm_padding_secondary">

            <TextView
                android:id="@+id/show_content"
                style="@style/ClassicTextSecondary"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:ellipsize="end"
                android:maxEms="8"
                tools:text="dsadasdsadasdasdasadasdasdasda"
                 />
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>