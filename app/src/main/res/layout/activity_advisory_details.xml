<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.bsoft.mob.ienr.activity.AdvisoryDetailsActivity">
    <com.bsoft.mob.ienr.view.BsoftActionBar
        android:id="@+id/actionbar"
        style="@style/ClassicActionBar" />
    <LinearLayout
        android:id="@+id/ll_overall"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/background">
    <com.wuxiaolong.pullloadmorerecyclerview.PullLoadMoreRecyclerView
        android:id="@+id/recycle_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        ></com.wuxiaolong.pullloadmorerecyclerview.PullLoadMoreRecyclerView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/white"
        android:padding="10dp"
        android:gravity="center"

        >
        <ImageView
            android:id="@+id/iv_voice_cut"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginRight="10dp"
            android:background="@mipmap/voice_btn_normal"
            />
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/shape_kuang_gray"
            >
            <EditText
                android:id="@+id/et_message_send"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"
                android:paddingLeft="3dp"
                android:paddingRight="3dp"
                android:imeOptions="actionSend"
                android:inputType="text"
               />
            <com.bsoft.mob.ienr.the_recording.AudioRecordButton
                android:id="@+id/tv_voice_type"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="按住说话"
                android:textColor="#333333"
                android:visibility="gone"
                android:background="@drawable/button_recordnormal"
                />
        </RelativeLayout>
        <ImageView
            android:id="@+id/iv_add_photo"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:padding="5dp"
            android:src="@mipmap/tb_more"
            android:layout_marginLeft="10dp"/>
    </LinearLayout>

    </LinearLayout>
</LinearLayout>
