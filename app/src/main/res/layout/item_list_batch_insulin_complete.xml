<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="85dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/item_batch_insulin_complete_time"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="@dimen/classic_text_size_primary"
            android:textStyle="bold"
            android:gravity="center"/>
        <TextView
            android:id="@+id/item_batch_insulin_complete_title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="@dimen/classic_text_size_primary"
            android:textStyle="bold"
            android:gravity="center"/>
        <TextView
            android:id="@+id/item_batch_insulin_complete_number"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="@dimen/classic_text_size_primary"
            android:textStyle="bold"
            android:gravity="center"/>

    </LinearLayout>

        <TextView
            android:id="@+id/item_batch_insulin_complete_username"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:textSize="@dimen/classic_text_size_primary"
            android:layout_marginLeft="8dp"/>
        <TextView
            android:id="@+id/item_batch_insulin_complete_nowtime"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:textSize="@dimen/classic_text_size_primary"
            android:layout_marginLeft="8dp"/>


</LinearLayout>